<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".ReadCsvTransactionPage"
android:gravity="center"
android:background="@color/colorPrimaryDark"
tools:showIn="@layout/app_bar_read_csv_transaction_page">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/textViewJoinGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Podaj ścieżkę do pliku z którego chcesz wczytać transakcje"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"/>

    <EditText
        android:layout_marginTop="15dp"
        android:id="@+id/etDirectory"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:hint="Ścieżka do pliku"
        android:textColorHint="#fff"
        android:textColor="#fff"/>
</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:background="@color/colorPrimaryDark">
    <Button
        android:id="@+id/bCancel"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonstyle"
        android:text="Anuluj"
        android:layout_marginRight="15dp"
        android:textColor="#fff"/>
    <Button
        android:id="@+id/bRead"
        android:drawableRight="@drawable/ic_send_white_24dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonoutlinestyle"
        android:text="Wczytaj"
        android:textColor="#fff"/>
</LinearLayout>
</LinearLayout>