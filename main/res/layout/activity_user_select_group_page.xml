<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    tools:context=".UserSelectGroupPage">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/bMenuLogOut"
            android:drawableRight="@drawable/ic_lock_open_white_24dp"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_gravity="right"
            android:background="@null" />
        <TextView
            android:textSize="22dp"
            android:layout_marginBottom="10dp"
            android:layout_width = "wrap_content"
            android:layout_height = "match_parent"
            android:hint = "WITAJ W APLIKACJI"
            android:backgroundTint="@android:color/transparent"
            android:gravity="center"
            android:textColorHint="#fff"/>
        <TextView
            android:textSize="18dp"
            android:layout_marginBottom="15dp"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:hint = "Nie jesteś aktualnie członkiem żadnej grupy, aby zarządzać wydatkami załóż grupę, albo poproś o dodanie do grupy znajomego."
            android:backgroundTint="@android:color/transparent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textColorHint="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimaryDark">
        <Button
            android:id="@+id/bGroupJoin"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonstyle"
            android:text="Dołącz"
            android:layout_marginRight="10dp"
            android:textColor="#fff"/>
        <Button
            android:id="@+id/bGroupCreate"
            android:drawableRight="@drawable/ic_send_white_24dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonoutlinestyle"
            android:text="Stwórz"
            android:textColor="#fff"/>
    </LinearLayout>

</LinearLayout>