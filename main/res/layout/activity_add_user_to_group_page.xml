<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddUserToGroupPage"
    android:gravity="center"
    android:background="@color/colorPrimaryDark">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dodaj użytkownika:"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"/>

        <EditText
            android:layout_marginTop="15dp"
            android:id="@+id/etgroupName"
            android:layout_height="wrap_content"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:hint="Nazwa użytkownika"
            android:textColorHint="#fff"
            android:textColor="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark">
        <Button
            android:id="@+id/bAddUserCancel"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonstyle"
            android:text="Anuluj"
            android:layout_marginRight="15dp"
            android:textColor="#fff"/>
        <Button
            android:id="@+id/bAddUser"
            android:drawableRight="@drawable/ic_send_white_24dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonoutlinestyle"
            android:text="Dodaj"
            android:textColor="#fff"/>
    </LinearLayout>

</LinearLayout>

